{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3ScopedAccess",
            "Effect": "Allow",
            "Action": ["s3:*"],
            "Resource": ["arn:aws:s3:::event-driven-*"]
        },
        {
            "Sid": "S3ListAccess",
            "Effect": "Allow",
            "Action": ["s3:ListAllMyBuckets"],
            "Resource": ["*"]
        },
        {
            "Sid": "DynamoDBScopedAccess",
            "Effect": "Allow",
            "Action": ["dynamodb:*"],
            "Resource": ["arn:aws:dynamodb:*:*:table/event-driven-*"]
        },
        {
            "Sid": "SQSScopedAccess",
            "Effect": "Allow",
            "Action": ["sqs:*"],
            "Resource": ["arn:aws:sqs:*:*:event-driven-*"]
        },
        {
            "Sid": "KinesisScopedAccess",
            "Effect": "Allow",
            "Action": ["kinesis:*"],
            "Resource": ["arn:aws:kinesis:*:*:stream/event-driven-*"]
        },
        {
            "Sid": "CloudWatchLogScopedAccess",
            "Effect": "Allow",
            "Action": ["logs:*"],
            "Resource": [
                "arn:aws:logs:*:*:log-group:/aws/lambda/event-driven-*",
                "arn:aws:logs:*:*:log-group:/aws/lambda/event-driven-*:log-stream:*"
            ]
        },
        {
            "Sid": "CloudWatchLogListAccess",
            "Effect": "Allow",
            "Action": ["logs:DescribeLogGroups"],
            "Resource": ["arn:aws:logs:*:*:log-group::log-stream:"]
        },
        {
            "Sid": "LambdaScopedAccess",
            "Effect": "Allow",
            "Action": ["lambda:*"],
            "Resource": ["arn:aws:lambda:*:*:function:event-driven-*"]
        },
        {
            "Sid": "LambdaEventSourceMappingAccess",
            "Effect": "Allow",
            "Action": "lambda:CreateEventSourceMapping",
            "Resource": "*"
        },
        {
            "Sid": "IAMScopedAccess",
            "Effect": "Allow",
            "Action": ["iam:*"],
            "Resource": [
                "arn:aws:iam::*:policy/event-driven-*",
                "arn:aws:iam::*:role/event-driven-*",
                "arn:aws:iam::*:group/event-driven-*",
                "arn:aws:iam::*:user/event-driven-*"
            ]
        }
    ]
}
