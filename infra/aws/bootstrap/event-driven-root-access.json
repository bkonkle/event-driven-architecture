{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3ScopedAccess",
            "Effect": "Allow",
            "Action": ["s3:*"],
            "Resource": ["arn:aws:s3:::event-driven-*"]
        },
        {
            "Sid": "S3ListAccess",
            "Effect": "Allow",
            "Action": "s3:ListAllMyBuckets",
            "Resource": "*"
        },
        {
            "Sid": "DynamoDBScopedAccess",
            "Effect": "Allow",
            "Action": "dynamodb:*",
            "Resource": "arn:aws:dynamodb:*:*:table/event-driven-*"
        },
        {
            "Sid": "SQSScopedAccess",
            "Effect": "Allow",
            "Action": "sqs:*",
            "Resource": "arn:aws:sqs:*:*:event-driven-*"
        },
        {
            "Sid": "KinesisScopedAccess",
            "Effect": "Allow",
            "Action": "kinesis:*",
            "Resource": "arn:aws:kinesis:*:*:stream/event-driven-*"
        },
        {
            "Sid": "APIGatewayScopedAccess",
            "Effect": "Allow",
            "Action": "apigateway:*",
            "Resource": [
                "arn:aws:apigateway:*::/apis",
                "arn:aws:apigateway:*::/apis/*",
                "arn:aws:apigateway:*::/v2/apis/*",
                "arn:aws:apigateway:*::/tags/*",
                "arn:aws:apigateway:*::/tags/arn:aws:apigateway:*::/v2/apis/*"
            ]
        },
        {
            "Sid": "IAMScopedAccess",
            "Effect": "Allow",
            "Action": "iam:*",
            "Resource": [
                "arn:aws:iam::*:policy/event-driven-*",
                "arn:aws:iam::*:role/event-driven-*",
                "arn:aws:iam::*:group/event-driven-*",
                "arn:aws:iam::*:user/event-driven-*"
            ]
        }
    ]
}
